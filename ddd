import pandas as pd
import numpy as np

# Ścieżka do pliku Excel
sciezka = 'sciezka/do/pliku.xlsx'

# Parametry zakresu danych
arkusz = 'Arkusz1'              # Nazwa arkusza
wiersz_start = 1                # Indeks początkowy wiersza (licząc od 0)
wiersz_koniec = 10              # Indeks końcowy wiersza (niewłączany)
kolumna_start = 1              # Indeks początkowy kolumny (0 = kolumna A)
kolumna_koniec = 4             # Indeks końcowy kolumny (niewłączany)

# Wczytanie całego arkusza
df_pelny = pd.read_excel(sciezka, sheet_name=arkusz, header=None)

# Wycięcie odpowiedniego zakresu danych (wiersze i kolumny)
df_zakres = df_pelny.iloc[wiersz_start:wiersz_koniec, kolumna_start:kolumna_koniec]

# Konwersja do numpy.ndarray
dane_numpy = df_zakres.to_numpy()

# Wyświetlenie wyniku (opcjonalnie)
print(dane_numpy)
