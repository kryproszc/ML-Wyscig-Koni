import numpy as np

def odwrocona_nad_przekatna(n: int) -> np.ndarray:
    """
    Tworzy macierz n x n z jedynkami nad przekątną odwrotną (i + j < n - 1),
    a zerami w pozostałych miejscach.
    """
    macierz = np.zeros((n, n))
    for i in range(n):
        for j in range(n):
            if i + j < n - 1:
                macierz[i, j] = 1.0
    return macierz

# Przykład użycia
macierz_19 = odwrocona_nad_przekatna(19)
print(macierz_19)
