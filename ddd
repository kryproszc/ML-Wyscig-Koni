mu_j = m_i[j]
sd_j = s_i[j]
CL_ij = np.random.lognormal(ln_mean, ln_sd)

if mu_j - 2 * sd_j <= CL_ij <= mu_j + 2 * sd_j:
    cl_adj = CL_ij
elif mu_j - 3 * sd_j <= CL_ij <= mu_j + 3 * sd_j:
    cl_adj = 0.5 * CL_ij
else:
    cl_adj = 0.1 * CL_ij

tri_copy[r, j + 1] = base * cl_adj
if r == mm - j - 1:
    new_tri[r, j + 1] = tri_copy[r, j + 1]
